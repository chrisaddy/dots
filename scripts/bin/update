#!/usr/bin/env bash

cd $HOME/dots
sudo make
sudo pacman -Syyu
paru -Syyu
yay -Syyu
git add . 
git commit -m 'updates' 
git push

cd $HOME/notes
rm -f .git/index.lock
git add . & git commit -m 'updates' & git push

pacman -Qqe > "$HOME/dots/packages-list/pacman.txt"
paru -Qqe > "$HOME/dots/packages-list/paru.txt"
